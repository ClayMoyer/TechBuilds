<div class="ui card">
    <div class="content">
        <h1 style="color:black;">{{product.product_name}}</h1>
        
        <h2 class="ui sub header">{{product.brand.dataValues.brand_name}}</h2>
    </div>
    <div class="content">
        <div class="content">
            <div style="color:black;">
                {{product.product_description}}
            </div>
            <h5 class="ui sub header">{{product.product_price}}</h5>
            <label for="quantity" style="color:black">Quantity: </label>
            <input class="ui input" type="number" name="quantity" id="quantity_{{product.id}}" min="1" max="10" value="1">
        </div>
    </div>
    <div class="ui bottom attached button" id="{{product.id}}" onclick="addToCart({{product.id}})">
        <i class="shopping cart icon"></i>
        Add to Cart
    </div>
</div>